{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/test/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/shared/config/test.config.ts",
    "node_modules",
    ".vscode-test"
  ]
}
